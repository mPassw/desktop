{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "mPass",
    "version": "../package.json",
    "identifier": "desktop.mpass.dev",
    "build": {
        "beforeDevCommand": "bun run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "mPass",
                "minWidth": 1024,
                "minHeight": 648,
                "width": 1152,
                "height": 648,
                "center": true,
                "titleBarStyle": "Visible"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFQjNDM0E3Njg4RjkxOTEKUldTUmtZOW9wOE96N2tBS2phSENSK2twK2k4dCtLTzQyZjFHVUowYjRIUncyUjNvT012VE1jUisK",
            "endpoints": [
                "https://github.com/mPassw/desktop/releases/latest/download/latest.json"
            ]
        }
    },
    "bundle": {
        "active": true,
        "targets": ["deb", "rpm", "msi", "dmg", "app"],
        "createUpdaterArtifacts": true,
        "icon": ["icons/icon.icns", "icons/icon.ico", "icons/icon.png"]
    }
}
